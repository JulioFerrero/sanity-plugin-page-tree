{
  "extends": "./tsconfig.settings",
  "include": ["./src"],
  "noCheck": true,
  "exclude": [
    "./src/**/__fixtures__",
    "./src/**/__mocks__",
    "./src/**/*.test.ts",
    "./src/**/*.test.tsx"
  ],
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "./dist",
    "jsx": "preserve",
    "module": "preserve",
    "noEmit": true
  }
}
